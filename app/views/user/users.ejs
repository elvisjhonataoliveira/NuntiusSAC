<%- include('../header')%>
<div class='row'>
	<h1>Lista de usuários</h1>
</div>
<div class='row'>
	<div class="col-lg-10 offset-lg-1">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>Data de Criação</th>
					<th>Data de Atualização</th>
					<th>Adm?</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>
				<% if (result && result.length>0) { -%>
					<% for (var i = 0; i < result.length; i++) { -%>
						<tr>
							<td><%= result[i].name %></td>
							<td><%= result[i].email %></td>
							<td><%= result[i].creationDate %></td>
							<td><%= result[i].updatedDate %></td>
							<td><%= result[i].adm %></td>
							<td>
								<a href="/user/<%= result[i]._id %>"><i class="far fa-edit fa-1x"></i></a>
							</td>
						</tr>
					<% } -%>	
				<% } -%>
			</tbody>
		</table>
	</div>
</div>
