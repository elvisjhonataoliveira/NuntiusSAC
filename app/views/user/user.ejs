<%- include('../header')%>
<div class='row'>
	<div class="col-lg-4 offset-lg-4">
		<form action="/user" method="POST" class='jumbotron'>
			<fieldset>
				<legend>Cadastrar usuário</legend>
				<% if (user._id!=undefined) { -%>
					<input type="hidden" name="_id", value="<%= user._id%>"/>	
					<input type="hidden" name="creationDate", value="<%= user.creationDate%>"/>	
					<input type="hidden" name="updatedDate", value="<%= user.updatedDate%>"/>	
				<% } -%>

				
				<div class="form-group">
					<label>Email</label>
					<input type="email" class="form-control" placeholder="Digite seu email" name='email' value="<%= user.email %>">
					<small id="emailHelp" class="form-text text-muted">Fique tranquilo, não compartilhamos seus dados com ninguém!</small>
				</div>
				<div class="form-group">
					<label>Nome</label>
					<input type="text" class="form-control" placeholder="Nome" name='name' value="<%= user.name %>">
				</div>
				<div class="form-check">
					<label class="form-check-label">
          				<input class="form-check-input" type="checkbox" name="adm" value="true" <% if (user.adm) { -%>checked='checked'<% } -%>>
          				ADM?
        			</label>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Salvar</button>
				</div>
				<% if(errors && errors.length>0){ %>
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<strong>Algo deu errado..</strong> 
						<ul>

						<% for(var i = 0; i < errors.length; i++) { %>
							<li class="text-primary"><%=errors[i].msg%></li>
						<% } %>
						</ul>
					</div>
				<% } %>
			</fieldset>
		</form>
	</div>
</div>
<%- include('../footer')%>